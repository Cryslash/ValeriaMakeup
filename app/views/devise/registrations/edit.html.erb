<div class="bg">
<div id="devise_container">
<!-- <h2>Edit <%= resource_name.to_s.humanize %></h2> -->
<h2>Editar Perfil</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "Email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Atualmente aguardando confirmação para: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "Senha" %> <br><i>(deixe em branco caso não deseje alterar)</i><br />
    <% if @minimum_password_length %>      
      <em>(mínimo de <%= @minimum_password_length %> caracteres)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>    
  </div>

  <div class="field">
    <%= f.label "Confirmar Senha" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "Senha Atual" %> <br><i>(precisamos da sua senha atual para confirmar suas mudanças)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div><br>

  <div class="actions">
    <%= f.submit "Atualizar" %>
  </div>
<% end %>
<h3>Cancelar minha conta</h3>

<p>Descontente? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete, id: "erase_acc" %></p>
<br>
<%= link_to "Voltar", :back %>
</div>
</div>